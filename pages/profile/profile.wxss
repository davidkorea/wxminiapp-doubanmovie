.pfile{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-family: 'Microsoft Yahei';
  font-size: 40rpx;
  color: #707070;
}

.image{
  background-color: #f2f2f2;
  width: 300rpx;
  height: 360rpx;
  padding: 40rpx;
  border-bottom: 20rpx solid #eee;
  margin: 80rpx;
}

.name{
  font-weight: bold;
  font-size: 60rpx;
  margin-bottom: 50rpx;
  border-bottom: 10rpx solid #eee;
}

.pic{
  align-items: center;
  width: 300rpx;
  height: 320rpx;
  
}